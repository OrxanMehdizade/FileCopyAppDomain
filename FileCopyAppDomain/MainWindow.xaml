<Window x:Class="FileCopyAppDomain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileCopyAppDomain"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Height='40' Width="60" FontSize="20" Margin="77,66,613,278">From</Label>
        <TextBox x:Name="destinationTextBox" Height='40' Width="390" Margin="168,148,192,196"></TextBox>

        <Button x:Name="openDestinationButton" Height='40' Width="100" Margin="578,123,62,171" Click="OpenDestinationButton_Click">Open</Button>
        <Label Height='40' Width="60" FontSize="20" Margin="77,148,613,196">To</Label>
