        <Button x:Name="openSourceButton" Height='40' Width="100" Margin="578,37,62,257" Click="OpenSourceButton_Click">Open</Button>

        <Button x:Name="suspendButton" Height='40' Width="90" Margin="240,288,420,56" Click="SuspendButton_Click">Suspend</Button>
        <Button x:Name="resumeButton" Height='40' Width="90" Margin="400,288,260,56" Click="ResumeButton_Click">Resume</Button>
        <Button x:Name="startButton" Height='40' Width="90" Margin="546,288,114,56" Click="StartButton_Click">Start</Button>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="40" Margin="102,244,0,0" VerticalAlignment="Top" Width="601"/>

    </Grid>
</Window>
